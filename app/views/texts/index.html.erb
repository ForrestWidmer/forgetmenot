

<div class="container marketing">
  <div class="row-fluid">
    <div class="span12">
      <h1>My Texts</h1>
      <hr class="soften">

    </div>
  </div>

  <div class="row-fluid">
    <% @texts.each do |text| %>
      <div class="span4">
        <p><%= link_to text.title, text %></p>
        <small>Date: <%= text.datetime.to_date %></small><br>
        <small>Time: <%= text.datetime.strftime("%I:%M%p") %></small><br>
        <small>created <%= time_ago_in_words(text.created_at) %> ago</small>
        <p><%= button_to "Delete Text", text, method: :delete, confirm: "Are you sure you want to delete this?", class: "btn btn-success" %></p>
      </div>
    <% end %>
  </div>
</div>
