<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :mobile_number %><i>(ex. 1235551234, no non-number characters)</i><br />
  <%= f.text_field :mobile_number %></div>

  <div><%= f.label :Mobile_Carrier %><br />
  <%= f.select :mobile_carrier, options_for_select(User::CARRIER_OPTIONS) %></div>

  <div><%= f.label :Time_Zone %><br />
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
